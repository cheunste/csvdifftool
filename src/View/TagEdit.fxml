<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="800.0" prefWidth="1271.0" xmlns="http://javafx.com/javafx/8.0.171">
    <left>
        <VBox prefHeight="800.0" prefWidth="238.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Tag Filter:"/>
                <TextField/>
                <Label text="Tag List:"/>
                <ListView prefHeight="696.0" prefWidth="198.0"/>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </left>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="775.0" prefWidth="186.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" text="Save"/>
                <JFXButton buttonType="RAISED" text="Force Copy"/>
                <HBox alignment="CENTER"/>
            </children>
        </VBox>
    </right>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <HBox>
                    <children>
                        <Label text="Tag Name:"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </HBox>
                <HBox fillHeight="false" layoutX="10.0" layoutY="10.0" prefHeight="677.0" prefWidth="726.0">
                    <children>

                        <!-- Command Variable View-->
                        <VBox fx:id="CommonView">
                            <fx:include source="commonTagScene.fxml"/>
                        </VBox>
                        <Region prefHeight="200.0" prefWidth="200.0"/>

                        <!-- Command/TKype Variable View -->
                        <VBox fx:id="CommandView" visible="false">
                            <!-- Source Variable View-->
                            <VBox fx:id="SourceView">
                                <fx:include source="SourceScene.fxml"/>
                            </VBox>
                            <fx:include source="CommandScene.fxml"/>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </center>
